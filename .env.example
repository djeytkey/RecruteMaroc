APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Stripe (paiement des offres)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Google OAuth (connexion avec Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"  # optionnel
# Si InvalidStateException au retour de Google : mettre à true (session perdue entre redirect et callback).
# Utiliser en dev uniquement ; en prod, garder false et vérifier que APP_URL = URL réelle du site.
# GOOGLE_OAUTH_STATELESS=true
# Si erreur cURL 60 "SSL certificate problem" (souvent sous Windows) : l'app utilise le magasin de certificats
# natif si PHP 8.2+ ; sinon télécharger https://curl.se/ca/cacert.pem et dans php.ini définir :
# curl.cainfo = "C:/chemin/vers/cacert.pem" et openssl.cafile = "C:/chemin/vers/cacert.pem"

# Facebook OAuth (connexion avec Facebook)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
# FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"  # optionnel
# FACEBOOK_OAUTH_STATELESS=true  # en dev si session perdue entre redirect et callback

# Envoyer un email d'activation aux recruteurs (lien pour définir le mot de passe)
# SEND_RECRUITER_ACTIVATION_EMAIL=false
